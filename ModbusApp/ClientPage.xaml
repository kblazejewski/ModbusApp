<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ModbusApp.ViewModels"
             x:Class="ModbusApp.ClientPage">

    <ContentPage.BindingContext>
        <vm:ClientViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, Auto"
          ColumnDefinitions="*"
          Padding="10">

        <!-- Górna część: Konfiguracja połączenia -->
        <Border Grid.Row="0" Margin="10">
            <Grid ColumnDefinitions="*,*,*,*,*" ColumnSpacing="5" Padding="15">
                <Entry Grid.Column="0" Text="{Binding IpAddress}" Placeholder="IP Address" />
                <Entry Grid.Column="1" Text="{Binding Port}" Placeholder="Port" Keyboard="Numeric" />
                <Entry Grid.Column="2" Text="{Binding DeviceId}" Placeholder="Device ID" Keyboard="Numeric" />
                <Button Grid.Column="3" Text="{Binding ConnectButtonText}" Command="{Binding ToggleConnectionCommand}" />
                <Label Grid.Column="4" Text="{Binding ConnectionStatus}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            </Grid>
        </Border>
        
        <!-- Środkowa część: Wpisywanie danych do rejestrów -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*,*" ColumnSpacing="5" Padding="5">
            <Picker Grid.Column="0" ItemsSource="{Binding ModbusWriteFunctions}" SelectedItem="{Binding SelectedWriteFunction}" />
            <Entry Grid.Column="1" Text="{Binding WriteAddress}" Placeholder="Register Address" Keyboard="Numeric" />
            <Entry Grid.Column="2" Text="{Binding WriteValue}" Placeholder="Value" />
            <Button Grid.Column="3" Text="Write" Command="{Binding WriteRegisterCommand}" />
            <Label Grid.Column="4" Text="{Binding WriteFeedback}" />
        </Grid>

        <!-- Dolna część: Odczyt danych z rejestrów -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*,*" ColumnSpacing="5" Padding="5">
            <Picker Grid.Column="0" ItemsSource="{Binding ModbusReadFunctions}" SelectedItem="{Binding SelectedReadFunction}" />
            <Entry Grid.Column="1" Text="{Binding ReadRegisterAddress}" Placeholder="Register Address" Keyboard="Numeric" />
            <Button Grid.Column="2" Text="Read" Command="{Binding ReadRegisterCommand}" />
            <Label Grid.Column="3" Text="{Binding ReadValue}" />
            <Label Grid.Column="4" Text="{Binding ReadFeedback}" />
        </Grid>

    </Grid>
</ContentPage>
